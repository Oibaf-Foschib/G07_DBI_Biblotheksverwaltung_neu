<Window x:Class="G07_DBI_Biblotheksverwaltung.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Benutzer bearbeiten"
        Height="148"
        Width="339"
        ResizeMode="NoResize">
    <Canvas>
        <Label Content="Name:" Canvas.Left="10" Canvas.Top="10"/>
        <TextBox x:Name="txtName" Canvas.Left="80" Canvas.Top="10" Width="230" Height="25"/>

        <Label Content="E-Mail:" Canvas.Left="10" Canvas.Top="45"/>
        <TextBox x:Name="txtEmail" Canvas.Left="80" Canvas.Top="45" Width="230" Height="25"/>

        <Button Content="Speichern" Click="SaveUser_Click" Canvas.Left="160" Canvas.Top="80" Width="100"/>
        <Button Content="Abbrechen" Click="Cancel_Click" Canvas.Left="50" Canvas.Top="80" Width="100"/>
    </Canvas>
</Window>
