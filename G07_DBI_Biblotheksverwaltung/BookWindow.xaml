<Window x:Class="G07_DBI_Biblotheksverwaltung.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buch bearbeiten/hinzufügen"
        Height="224"
        Width="400"
        ResizeMode="NoResize">
    <Canvas>
        <Label Content="Titel:" Canvas.Left="10" Canvas.Top="10" Width="50"/>
        <TextBox x:Name="txtTitle" Canvas.Left="70" Canvas.Top="10" Width="300" Height="25"/>

        <Label Content="Autor:" Canvas.Left="10" Canvas.Top="45" Width="50"/>
        <TextBox x:Name="txtAuthor" Canvas.Left="70" Canvas.Top="45" Width="300" Height="25"/>

        <Label Content="Genre:" Canvas.Left="10" Canvas.Top="80" Width="50"/>
        <TextBox x:Name="txtGenre" Canvas.Left="70" Canvas.Top="80" Width="300" Height="25"/>

        <Label Content="Jahr:" Canvas.Left="10" Canvas.Top="115" Width="50"/>
        <TextBox x:Name="txtYear" Canvas.Left="70" Canvas.Top="115" Width="300" Height="25"/>

        <Button Content="Speichern" Click="Save_Click" Canvas.Left="70" Canvas.Top="150" Width="100" Height="30"/>
        <Button Content="Abbrechen" Click="Cancel_Click" Canvas.Left="180" Canvas.Top="150" Width="100" Height="30"/>
    </Canvas>
</Window>
