<Window x:Class="G07_DBI_Biblotheksverwaltung.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buch bearbeiten/hinzufügen" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Titel:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTitle" Margin="120,5,10,5" Grid.Row="0"/>

        <Label Content="Autor:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAuthor" Margin="120,5,10,5" Grid.Row="1"/>

        <Label Content="Genre:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="txtGenre" Margin="120,5,10,5" Grid.Row="2"/>

        <Label Content="Jahr:" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox x:Name="txtYear" Margin="120,5,10,5" Grid.Row="3"/>

        <Button Content="Speichern" Click="Save_Click" Margin="5,4,5,27" Grid.Row="4"/>
        <Button Content="Abbrechen" Click="Cancel_Click" Margin="5,31,5,0" Grid.Row="4"/>
    </Grid>
</Window>
