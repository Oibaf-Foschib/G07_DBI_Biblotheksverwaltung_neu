<Window x:Class="G07_DBI_Biblotheksverwaltung.LoanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ausleihe bearbeiten/hinzufügen" 
        Height="215" Width="420"
        ResizeMode="NoResize">
    <Canvas Margin="0,0,0,0">
        <Label Content="Buchtitel:" Canvas.Left="10" Canvas.Top="10"/>
        <ComboBox x:Name="cbBookTitle" Canvas.Left="120" Canvas.Top="10" Width="250" Height="25"/>

        <Label Content="Benutzer:" Canvas.Left="10" Canvas.Top="45"/>
        <ComboBox x:Name="cbUser" Canvas.Left="120" Canvas.Top="45" Width="250" Height="25"/>

        <Label Content="Ausleihdatum:" Canvas.Left="10" Canvas.Top="80"/>
        <DatePicker x:Name="dpLoanDate" Canvas.Left="120" Canvas.Top="80" Width="250"/>

        <Label Content="Rückgabedatum:" Canvas.Left="10" Canvas.Top="115"/>
        <DatePicker x:Name="dpReturnDate" Canvas.Left="120" Canvas.Top="115" Width="250"/>

        <Button Content="Speichern" Click="SaveLoan_Click" Canvas.Left="60" Canvas.Top="150" Width="100"/>
        <Button Content="Abbrechen" Click="Cancel_Click" Canvas.Left="220" Canvas.Top="150" Width="100"/>
    </Canvas>
</Window>
